{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@apps/common(|/.*)$": "<rootDir>/../../../libs/common/src/$1",
    "^common(|/.*)$": "<rootDir>/../../../libs/common/src/$1"
  },
  "testTimeout": 60000,
  "maxWorkers": 1,
  "verbose": true
}
